<Window x:Class="PreviewHandlerHostDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreviewHandlerHostDemo"
        xmlns:PreviewHandlerHost="clr-namespace:PreviewHandlerHost;assembly=PreviewHandlerHost"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="75"
                Height="25"
                Content="Обзор..."
                Click="Button_Click" />
        <PreviewHandlerHost:PreviewControl x:Name="PreviewControl" Grid.Column="1" />
    </Grid>
</Window>
